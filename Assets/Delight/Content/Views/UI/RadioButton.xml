<RadioButton xmlns="Delight" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="Delight ../../Delight.xsd" BasedOn="UIImageView" IsLocked="True"
             IsChecked="t:bool" IsDisabled="t:bool"
             Spacing="t:ElementSize = 10"
             m.RadioButtonImageView="RadioButton"
             m.RadioButtonLabel=""
             Height="40"
             Click="RadioButtonClick">
  <Group Id="RadioButtonGroup" Orientation="Horizontal" Spacing="{Spacing}">
    <Image Id="RadioButtonImageView" Width="40" Height="40" />
    <Label Id="RadioButtonLabel" AutoSize="Width" Height="100%" />
  </Group>
</RadioButton>

