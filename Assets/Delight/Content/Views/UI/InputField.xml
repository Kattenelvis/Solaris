<InputField xmlns="Delight" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="Delight ../../Delight.xsd" IsLocked="True"
            Module="!TextMeshPro"
            BasedOn="UIImageView"
            InputFieldComponent="t:UnityEngine.UI.InputField"
            m.InputFieldComponent="" m.InputText=""
            SetValueOnEndEdit="t:bool"
            OnlyTriggerValueChangedFromUI="t:bool"
            EndEdit="t:Action"
            ValueChanged="t:Action"
            Width="120" Height="40"
            TextMargin="t:ElementMargin = 9"
            defaultBinding.Text="TwoWay"
            >
  <Region Id="InputFieldPlaceholder" IsContentContainer="True" />
  <RectMask2D Id="TextArea" Margin="{TextMargin}">
    <Label Id="InputText" Width="100%" Height="100%" TextAlignment="TopLeft" />
  </RectMask2D>
</InputField>